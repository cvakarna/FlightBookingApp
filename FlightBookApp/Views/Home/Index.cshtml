@model FlightBookApp.Models.BookFlight
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Home Page";
}

   <div style="padding:20px">
       <h3>Flight Search Request</h3>
   </div>
    <div style="padding:20px">
        <form method="post">
            <div class="container">
                <div class="row">
                    <div class="col-md col-sm">
                        <div class="form-group">
                            <input type="text" asp-for="Origin" class="form-control" placeholder="Origin">
                        </div>
                    </div>
                    <div class="col-md col-sm">
                        <div class="form-group">
                            <input type="text" asp-for="Destination" class="form-control" placeholder="Destination">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-8">
                        <div class="form-group">
                            <input type="datetime-local" asp-for="OnwardDate" class="form-control" placeholder="OnwardDate">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-8">
                        <div class="form-group">
                            <input type="datetime-local" asp-for="ReturnDate" class="form-control" placeholder="ReturnDate">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

